/* Tests for boolean expressions 
*/


Machine.WorkArea.size(xmin=-100,xmax=500,ymin=-100,ymax=500);

draw {
    SomeLines;
	SomePointsAndALine;
	BoolComparissons;
}

function bool evaluateCoordinateValidity (point p)
{
	bool result = p.x > p.y;
	return result;
}

shape SomeLines 
{
	point currentPoint = (10,10);
	point nextPoint = currentPoint;
	repeat.until( currentPoint.x > 300 || currentPoint.y > 200)
		nextPoint.x = currentPoint.x + 9;
		nextPoint.y = currentPoint.x * 1.3;
		line.from(currentPoint).to(nextPoint);
		currentPoint = nextPoint;
	repeat.end
}


shape SomePointsAndALine 
{	
	number i = 0;
	point currentPoint = (10,10);
	repeat.until( 50 < 60 && currentPoint.x == 0 ||  currentPoint.y == 10)
		i = i + 1;
		currentPoint.x = currentPoint.x - i;
	repeat.end
	
	point coordinate = (50, 50);
	repeat.until( ! evaluateCoordinateValidity(coordinate) )
		number temp = coordinate.x;
		coordinate.x = coordinate.y - 3;
		line.from(coordinate).to(0,0);
		coordinate.y = temp;
	repeat.end
}

